{% extends 'base.html.twig' %}

{% block body %}
    <!-- Page Content -->
    <div class="container marge-sm">

        <div class="row">

            <div class="col-md-3">
                <p class="lead">Shop Phone</p>

                {{ render(controller('AppBundle:Product:search')) }}
            </div>

            <div class="col-md-9">

                <div class="row">
                    {% for product in products %}
                        <a href="{{ path('show_product', { 'id': product.id }) }}">
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <div class="thumbnail">
                                    <img src="{{ asset('img/'~product.img) }}" alt="">

                                    <div class="caption">
                                        <h4 class="pull-right">{{ product.price }} â‚¬</h4>
                                        <h4><a href="#">{{ product.Name }}</a>
                                        </h4>

                                        <p>{{ product.description }}</p>

                                        <p>poids : {{ product.weight }} g</p>
                                        {#<p>{{ product.tags }}</p>#}
                                    </div>
                                </div>
                            </div>
                        </a>
                    {% endfor %}

                </div>

            </div>

        </div>

    </div>
    <!-- /.container -->
{% endblock %}
